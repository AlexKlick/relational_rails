<%= form_with url: "/nbateams/#{@nbateam.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :city %>
  <%= form.text_field :city %>

  <%= form.label :number_of_players %>
  <%= form.text_field :number_of_players %>

  <%= form.label :playoff_ready %>
  <%= form.text_field :playoff_ready %>

  <%= form.submit "Update NBA Team" %>
<% end %>