<h1 style="text-align: center">Mountain Ranges</h1>
<p style="text-align: center"><a class="btn btn-secondary" href="/mountain_ranges/new">New Range</a></p>
<table class="table table-bordered" >
  <tr>
    <th style="text-align: center">Name</th>
    <th style="text-align: center">edit</th>
    <th style="text-align: center">Length</th>
    <th style="text-align: center">In Western Hemisphere?</th>
    <th style="text-align: center">delete</th>
  </tr>
  <% @ranges.each do |range| %>
  <tr>
    <td style="text-align: center">
      <a href="/mountain_ranges/<%= range.id %>" class="btn btn-link"><%= range.name%></a> 
    </td>
    <td>
      <a id="edit<%=range.id%>" href="/mountain_ranges/<%=range.id%>/edit">edit</a>
    </td>
    <td style="text-align: center"><%= range.length_km%></td>
    <td style="text-align: center"
    class="<%= range.western_hemisphere == true ? 'bg-success' : 'bg-danger' %>"
    ><%= range.western_hemisphere%></td>
    <td style="text-align: center">
      <%= button_to "delete", "/mountain_ranges/#{range.id}", method: :delete, :class => "btn btn-danger",id: "delete#{range.id}" %>
    </td>
  </tr>
  <% end %>
</table>
