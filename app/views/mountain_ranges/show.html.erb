<h1 style="text-align: center"><%= @range.name%> Mountain Range</h1>
<h3>Mountains in range: <%= @mtn_count %></h3>
<table class="table table-sm table-bordered">
  <tr>
    <th scope="row" style="text-align: center">Length</th>
    <th scope="row" style="text-align: center">In Western Hemisphere?</th>
  </tr>
  <tr>
    <td style="text-align: center"><%= @range.length_km%></td>
    <td
      style="text-align: center"
      class="<%= @range.western_hemisphere == true ? 'bg-success' : 'bg-danger' %>"
    >
      <%= @range.western_hemisphere%>
    </td>
  </tr>
</table>

